<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dimedriller.multitool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="com.dimedriller.multitoolmodel.MultitoolApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/Theme.Multitool.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
                android:name="com.dimedriller.multitoolmodel.purchases.PurchasesService"
                android:enabled="true" />
    </application>

</manifest>